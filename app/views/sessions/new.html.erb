<h1>Connexion</h1>

<%= form_with url: login_path, local: true do |form| %>
  <% if flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email, t('helpers.label.session.email') %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, t('helpers.label.session.password') %>
    <%= form.password_field :password %>
  </div>

  <div class="form-actions">
    <%= form.submit "Se connecter", class: "button" %>
  </div>

  <div class="create-account-link">
    <%= link_to "Pas encore inscrit ? CrÃ©ez un compte", new_user_path %>
  </div>
<% end %>
